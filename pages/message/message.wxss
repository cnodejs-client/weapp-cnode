@import '../../assets/wxss/wemark.wxss';
@import '../topic/topic.wxss';

page {
	height: 100%;
}
.weui-navbar {
	position: fixed;
	border-bottom: none;
	box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, .1);
	z-index: 100;
	background-color: #fff;
}
.weui-navbar__item {
	padding: 15rpx 0;
	font-size: 32rpx;
}

.content {
	padding-top: 40px;
}

.weui-loadmore__tips {
	color: #999;
	padding: 20rpx 0;
	box-sizing: border-box;
}

.read-mark {
	position: fixed;
	right: 40rpx;
	bottom: 100rpx;
	width: 100rpx;
	height: 100rpx;
	padding: 10rpx;
	text-align: center;
	box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, .1);
	background-color: #fff;
	border-radius: 50%;
	font-size: 0;
	box-sizing: border-box;
}
.read-mark image {
	width: 80rpx;
	height: 80rpx;
}

.weui-media-box__title {
	display: flex;
	align-items: center;
	justify-content: space-between;
}
