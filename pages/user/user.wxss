@import '../collect/collect.wxss';

page {
   background: #f5f5f5;
   font-size: 32rpx;
}

.header-avatar {
   display: flex;
   justify-content: center;
   flex-direction: column;
   position: relative;
   padding: 10rpx 0 30rpx 0;
   background: #444444;
}

.avatar-box {
   display: flex;
   justify-content: center;
}

.avatar {
   width: 18vw;
   height: 18vw;
   border-radius: 50%;
}

.name {
   display: flex;
   justify-content: center;
   margin-top: 10rpx;
	color: #fff;	
}
.name:last-child {
	font-size: 28rpx;
}

.recent {
	margin-bottom: 20rpx;
	box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, .1);
}
.recent-title {
	padding: 20rpx;
	padding-bottom: 10rpx;
	color: #888;
	border-bottom: 2rpx solid #f5f5f5;
	background-color: #fcfcfc;
}

.weui-panel::after {
	display: none;
}