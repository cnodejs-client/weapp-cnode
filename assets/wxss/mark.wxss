.menu-btn {
	padding: 10rpx 0;
	padding-top: 0; 
	display: flex;
	align-items: center;
	justify-content: space-around;
	border-bottom: 1rpx solid #f8f8f8;
}
.menu-btn text:first-child {
	margin-left: 0
}
.menu-btn text:last-child {
	margin-right: 0
}
.menu-btn text {
	font-size: 38rpx;
	display: inline-block;
	padding: 5rpx 10rpx;
}